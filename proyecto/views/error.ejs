<div class="container page-wrapper">
    <h1>Error <%= error.status || 500 %></h1>
    <p class="error-message"><%= message %></p>
    
    <% if (process.env.NODE_ENV === 'development' && error.stack) { %>
        <pre class="error-stack"><%= error.stack %></pre>
    <% } %>
    
    <a href="/" class="btn btn-primary">Volver al inicio</a>
</div>

<style>
.page-wrapper { padding: 4rem 2rem; text-align: center; }
.error-message { font-size: 1.2rem; color: #666; margin: 1rem 0 2rem; }
.error-stack { text-align: left; background: #f5f5f5; padding: 1rem; border-radius: 6px; overflow-x: auto; }
</style>
